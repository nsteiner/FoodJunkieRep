<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TandTFragment">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:layout_marginTop="0dp">

            <ImageView
                android:id="@+id/TipsImage"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/mise_en_plase" />

            <TextView
                android:id="@+id/TandT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:layout_gravity="center"
                android:shadowColor="@color/black"
                android:shadowDx="3.5"
                android:shadowDy="3.3"
                android:shadowRadius="3.6"
                android:text="@string/tips_fragment"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold" />

        </FrameLayout>

        <Button
            android:id="@+id/btn_Safety"
            android:layout_width="316dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="20"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/alata"
            android:text="@string/button_Safety"
            android:textColor="@color/white"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/green"
            android:textColorLink="@color/green"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_Sub"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/alata"
            android:text="@string/button_Sub"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_Metric"
            android:layout_width="316dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/alata"
            android:text="@string/button_Metric"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

